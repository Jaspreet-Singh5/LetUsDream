<% include ./partials/header %>

    <div class="container-fluid">
        <div class="row">
            
            <div style = "margin: 300px auto; width: 30%">
                <h1 style = "text-align: center">Add a new video</h1>
            
                <form action = "/media/videos" method = "post">
                    <div class= "form-group">
                        <input class = "form-control" type = "text" placeholder = "Title" name = "video[title]">
                    </div>
                    <div class= "form-group">
                        <input class= "form-control" type = "text" placeholder="video link" name = "video[video]">
                    </div>
                    <div class= "form-group">
                        <label for="description">Description</label>
                        <textarea id="description" class="form-control" name= "video[desc]"  row="3" required></textarea>
                    </div>
                    
                    <div class= "form-group">
                        <input class = "btn btn-primary btn-large btn-block" type = "submit" value = "Submit"> 
                    </div>
                    
                </form>
            
                <a href= "/cmsIndex">Go back</a>
            </div>
        </div>
    </div>

<% include ./partials/footer %>
